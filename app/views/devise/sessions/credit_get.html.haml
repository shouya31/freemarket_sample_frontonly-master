.devise
  = render "devise/shared/header"

  .info-credit
    .info-credit_header
      %h2 支払い番号
    .info-credit_contents
      .info-credit_contents_form
        .info-credit_contents_form_field
          = form_with url: :credit_info_keep_index, local: true do |f|
            %p
              カード番号
              %span.span-red 必須
            = f.text_field :number, maxlength: "16", placeholder: "半角数字のみ", class: "info-credit_contents_form_field_input"
            .info-credit_contents_form_field-cards
              -# = image_tag "visa.svg", class: "card"
              -# = image_tag "master-card.svg", class: "card"
              -# = image_tag "saison-card.svg", class: "card"
              -# = image_tag "jcb.svg", class: "card"
              -# = image_tag "american_express.svg", class: "card"
              -# = image_tag "dinersclub.svg", class: "card"
              -# = image_tag "discover.svg", class: "card"
              .info-credit_contents_form_field_date
                %p
                  有効期限
                  %span.span-red 必須
                %li
                  = f.select :exp_month, class: "select-form"

                %li 月
                %li
                  = f.select :exp_year, class: ""

                %li 年
              %p
                セキュリティーコード
                %span.span-red 必須
              = f.text_field :cvc, placeholder: "カードの背面の４桁もしくは３桁の番号",  class:"info-credit_contents_form_field_input-content"
              %p.sentence-blue カード裏側の番号とは？
              %button.submit 次へ進む
